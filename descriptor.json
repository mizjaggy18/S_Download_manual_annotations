{
  "name": "Download_manual_annotations",
  "description": "To download manual annotations details from image list",
  "schema-version": "cytomine-0.1",
  "container-image": {
    "image": "mizjaggy18/s_download_manual_annotations",
    "type": "singularity"
  },
  "command-line": "[CYTOMINE_HOST] [CYTOMINE_PUBLIC_KEY] [CYTOMINE_PRIVATE_KEY] [CYTOMINE_ID_PROJECT] [CYTOMINE_ID_SOFTWARE] [CYTOMINE_ID_IMAGES]",
  "inputs": [
    {
      "id": "cytomine_host",      
      "value-key": "[@ID]",
      "command-line-flag": "--@id",
      "name": "Cytomine host",
      "set-by-server": true,
      "optional": false,
      "type": "String"
    },
    {
      "id": "cytomine_public_key",
      "value-key": "[@ID]",
      "command-line-flag": "--@id",
      "name": "Cytomine public key",
      "set-by-server": true,
      "optional": false,
      "type": "String"
    },
    {  
      "id": "cytomine_private_key",
      "value-key": "[@ID]",
      "command-line-flag": "--@id",
      "name": "Cytomine private key",
      "set-by-server": true,
      "optional": false,
      "type": "String"
    },
    {
      "id": "cytomine_id_project",
      "value-key": "[@ID]",
      "command-line-flag": "--@id",
      "name": "Cytomine project ID",
      "set-by-server": true,
      "optional": false,
      "type": "Number"
    },
    {
      "id": "cytomine_id_software",
      "value-key": "[@ID]",
      "command-line-flag": "--@id",
      "name": "Cytomine software ID",
      "set-by-server": true,
      "optional": false,
      "type": "Number"
    }, 
    {
      "id": "cytomine_id_images",
      "value-key": "[@ID]",
      "command-line-flag": "--@id",
      "name": "Cytomine Image IDs",
      "description": "Images to download the manual annotations",
      "set-by-server": false,
      "optional": false,      
      "type": "ListDomain",
      "uri": "/api/project/$currentProject$/imageinstance.json",
      "uri-sort-attribute": "instanceFilename",
      "uri-print-attribute": "instanceFilename"
    }
  ]
}
